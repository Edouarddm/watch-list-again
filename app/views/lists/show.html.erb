<div class="top-page">
  <h1><%= @list.name %></h1>
  <%= link_to 'Ajouter un film', new_list_bookmark_path(@list, @bookmark), class: 'btn btn-dark' %>
</div>
<div class="container">
  <div class='index-movie'>
    <% @list.movies.each do |movie|%>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="movie-card">
        <%= image_tag movie.poster_url, class: 'movie-img' %>
        <div class="movie-card-content">
          <%= movie.title %>
          <%= movie.overview %>
        </div>
        <%= link_to 'Supprimer', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'text-danger' %>
      </div>
    <% end %>
  </div>
</div>
